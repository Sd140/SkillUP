<!DOCTYPE html>
<html lang="zxx">

<head>
    {{>header}}
</head>

<body id="top-header">

    {{>navbar}}
    <!--====== Header End ======-->

    <section class="woocommerce single page-wrapper">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-xl-7">

                    <div class="signup-form">
                        <div class="form-header">
                            <h2 class="font-weight-bold mb-3">Upload your Course</h2>
                        </div>

                        <form method="post" class="woocommerce-form woocommerce-form-register register">

                            <div class="row">
                                <div class="col-xl-6">
                                    <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                        <label>course Name&nbsp;<span class="required">*</span></label>
                                        <input type="text" class="form-control" name="course_name"
                                            placeholder="Course Name">
                                    </p>
                                </div>
                                <div class="col-xl-6">
                                    <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                        <label>Fees&nbsp;<span class="required">*</span></label>
                                        <input type="number" class="form-control" name="fees" placeholder="Course Fees">
                                    </p>
                                </div>
                                <div class="col-xl-6">
                                    <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                        <label>Number of Lectures&nbsp;<span class="required">*</span></label>
                                        <input type="number" class="form-control" name="lectures" value=""
                                            placeholder="No. of Lectures">
                                    </p>
                                </div>

                                <div class="col-xl-6">
                                    <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                        <label>Language&nbsp;<span class="required">*</span></label>
                                        <input type="text" class="form-control" name="language" value=""
                                            placeholder="Language">
                                    </p>
                                </div>

                                <div class="col-xl-6">
                                    <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                        <label>Description&nbsp;<span class="required">*</span></label>
                                        <textarea type="text" class="form-control" id="exampleFormControlTextarea1"
                                            rows="3" name="description" value=""
                                            placeholder="Course Description"></textarea>
                                    </p>
                                </div>
                                <div class="col-xl-6">
                                    <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                        <label>Level&nbsp;<span class="required">*</span></label>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="level" id="inlineRadio1"
                                            value="Beginner">
                                        <label class="form-check-label" for="inlineRadio1">Beginner</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="level" id="inlineRadio2"
                                            value="Intermediate">
                                        <label class="form-check-label" for="inlineRadio2">Intermediate</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="level" id="inlineRadio2"
                                            value="Advanced">
                                        <label class="form-check-label" for="inlineRadio2">Advanced</label>
                                    </div>

                                    </p>
                                </div>
                                <div class="col-xl-6">
                                    <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                        <label for="exampleFormControlFile1">Upload Course image<span class="required">*</span></label>
                                        <input type="file" name="image" class="form-control-file" id="exampleFormControlFile1">
                                    </p>
                                </div>
                                <div class="col-xl-6">
                                    <div class="form-group col-md-4">
                                        <label class="mr-sm-2" for="inputState">Category<span class="required">*</span></label>
                                        <select id="inputState" name="category" class="custom-select mr-sm-2 " id="inlineFormCustomSelect">
                                            <option selected>Choose...</option>
                                            <option>Data Analytics</option>
                                            <option>Artificial Intelligence</option>
                                            <option>Machine Learning</option>
                                            <option>Web Development</option>
                                            <option>Digital Marketing</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-xl-12">
                                    <div class="d-flex align-items-center justify-content-between py-2">
                                        <p class="form-row">
                                            <label
                                                class="woocommerce-form__label woocommerce-form__label-for-checkbox woocommerce-form-login__policy">
                                                <input class="woocommerce-form__input woocommerce-form__input-checkbox"
                                                    name="policy" type="checkbox" id="policy" value="forever">
                                                <span>Accept the Terms and Privacy Policy</span>
                                            </label>
                                        </p>

                                        <p class="woocommerce-LostPassword lost_password">
                                            <a href="#">Forgot password?</a>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <p class="woocommerce-FormRow form-row">
                                <button type="submit" class="woocommerce-button button" name="register"
                                    value="Register">Upload Course</button>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--shop register end-->

    <!-- Footer section start -->
    {{>footer}}

</body>

